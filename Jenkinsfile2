pipeline 
{
    agent any

    stages 
    {
        stage('Build') 
        {
            steps 
            {
                echo 'Build App'
            }
        }

        stage('Test') 
        {
            steps 
            {
                echo 'Test App'
            }
        }

        stage('Deploy') 
        {
            steps 
            {
                echo 'Deploy App'
            }
        }
        
         stage('SonarQube Analysis')
         {
             def scannerHome = tool 'sonarqube';
                withSonarQubeEnv()
                 {
      bat "${scannerHome}/bin/sonar-scanner -Dsonar.projectKey=App1}
  
         }
                 }
 }
 }
